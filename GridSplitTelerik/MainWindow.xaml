		<telerik:RadExpander Header="Select Donor" ExpandDirection="Left" HorizontalAlignment="Left" IsExpanded="True" Background="#BFDBFF" >
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="5"/>
				</Grid.ColumnDefinitions>
				<TextBlock  Text="Lorem ipsum dolor sit shit" Background="White"/>
				<GridSplitter Grid.Column="1" Width="5" ResizeBehavior="PreviousAndCurrent"  ResizeDirection="Columns"/>
			</Grid>
		</telerik:RadExpander>

		<telerik:RadExpander Header="Select Donor" ExpandDirection="Left" HorizontalAlignment="Left" IsExpanded="True" Background="#BFDBFF" >
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="5"/>
				</Grid.ColumnDefinitions>
				<TextBlock  Text="Lorem ipsum dolor sit shit" Background="White"/>
				<GridSplitter Grid.Column="1" Width="5" ResizeBehavior="PreviousAndCurrent"  ResizeDirection="Columns"/>
			</Grid>
		</telerik:RadExpander>

		<TextBlock  Text="Lorem ipsum dolor sit shit" Background="Green" />

	</DockPanel>
</Window>
